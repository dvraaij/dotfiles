" Set 'nocompatible' to ward off unexpected things that your distro might
" have made, as well as sanely reset options when re-sourcing .vimrc
set nocompatible

filetype plugin indent on
syntax on			" Enable syntax highlighting
set tabstop=4			" A tab is 4 spaces
set shiftwidth=4		" An indent is 4 spaces
set shiftround        		" Round indent to nearest shiftwidth multiple
set expandtab			" Use spaces instead of tabs
set guifont=Iosevka\ 20		" Font
set guioptions-=m		" No menu bar
set guioptions-=T		" No toolbar
set noesckeys			" Ignore ESC characters in INSERT mode
set relativenumber		" Use relative line numbers
set number			" Enable line numbers
set ignorecase			" Case insensitive search
set smartcase			" ... unless the seatch string contains cases.
set incsearch			" No incremental search
set autochdir			
set cinoptions=l1		" C formatting options.
set laststatus=2		" Always show the statusline
colorscheme desert

